<h1>Editer le gossip</h1>

<%= form_for @gossips do |f|%>

  <div class ="form_group">
    <label>Titre du Gossip</label>
    <%= f.text_field :title, class: 'form-control'%>
  </div>
<br>
  <div class ="form_group">
    <label>Gossip</label>
    <%= f.text_area :content, class: 'form-control'%>
  </div>
<br>
  <div class ="form_group">
    <button type="submit" class="btn btn-primary">Modifier le Gossip </button>
    </div>

<% end%>