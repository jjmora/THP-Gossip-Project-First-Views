<div class="div_text_centered">

  <p>City Id : <%= @id %></p>
  <h2>City Name</h2>
    <%= @city.name %></p>
    <br/>
  <h3>Zip Code</h3>
    <p><%= @city.zip_code %></p><br/>
  <hr>
</div>



<div class="row">
  <% @city_gossips.each do |gossip| %>
    <div class="col-sm-4">
      <div class="card text-center">
        <div class="card-body">
          <h5 class="card-title"><%= gossip.title %></h5>
          <p class="card-text"><%= gossip.user.first_name %></p>
          <p class="card-text"><%= gossip.content %></p>
          
          <a href="<%= gossip_path(gossip.id) %>" class="btn btn-primary">Gossip nยบ <%= gossip.id %></a>
        </div>
      </div>
      <br/>
    </div>
  <% end %>
</div>


  